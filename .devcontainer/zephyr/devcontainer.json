{
    "name": "Zephyr",
    "build": {
        "dockerfile": "Dockerfile",
        "options": [
            "-t",
            "arifbalik/zephyr-devcontainer:latest"
        ]
    },
    "runArgs": [
        "--name",
        "zephyr-devcontainer"
    ],
    "workspaceMount": "source=monorepo,target=/home/zephyr/workspace,type=volume",
    "workspaceFolder": "/home/zephyr/workspace"
}